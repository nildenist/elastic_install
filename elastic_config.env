ELASTIC_VERSION="8.15.5" # Set the desired Elasticsearch version
INSTALL_DIR="/opt/elasticsearch"
CONFIG_DIR="/opt/elasticsearch"
CORE_CONFIG_DIR="/opt/elasticsearch/config/elasticsearch.yml"
DATA_DIR="/data" # Path for Elasticsearch data
YAML_DIR="./" # Directory where the YAML files are located (same directory as the script)
SEED_HOSTS=("10.128.0.7" "10.128.0.8" "10.128.0.9") # List of all master-eligible node IPs

# ILM Configuration
ILM_POLICY_NAME="logs-lifecycle-policy"
ILM_HOT_DAYS="15"      # Keep in hot phase for 15 days
ILM_COLD_DAYS="60"     # Move to cold after 60 days total
ILM_DELETE_DAYS="90"   # Delete after 90 days total

# Node Tier Configuration (hot/warm/cold)
# Set to "hot" for high-performance nodes, "cold" for storage nodes
DEFAULT_NODE_TIER="hot"

# Disk Watermark Settings (prevent 90% disk issue)
DISK_WATERMARK_LOW="75%"      # Start moving shards at 85%
DISK_WATERMARK_HIGH="85%"     # No new shards at 90%
DISK_WATERMARK_FLOOD="95%"    # Read-only at 95%
